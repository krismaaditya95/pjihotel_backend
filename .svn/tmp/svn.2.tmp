<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta http-equiv="Pragma" content="no-cache">
<meta http-equiv="Cache-Control" content="no-cache">
<meta http-equiv="Expires" content="Sat, 01 Dec 2001 00:00:00 GMT">
<title>PJI Hotel - Daftar Tamu</title>
<link href="/static/css/bootstrap.min.css" rel="stylesheet">
<link href="/static/css/style.css" rel="stylesheet">
</head>
<body>

	<div role="navigation">
		<div class="navbar navbar-light" style="background-color: #e3f2fd;">
			<a href="/" class="navbar-brand">Dashboard</a>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a href="transaksi/catat">Check in</a></li>
					<li><a href="all-tasks">Check out</a></li>
					<li><a href="new-task">Reserve a room</a></li>
					<li><a href="all-tasks">Add type room</a></li>
					<li><a href="new-task">Add room</a></li>
					<li><a href="all-tasks">Available room</a></li>
					<li><a href="customers">Tambah tamu</a></li>
					<li><a href="all-tasks">Laporan transaksi</a></li>
				</ul>
			</div>
		</div>
	</div>

	<div class="container" id="homeDiv">
		<div class="jumbotron text-center">
			<h3>PJI Hotel</h3>
		</div>
	</div>
	<div class="container text-center" id="tasksDiv">
		<h3>Data Customer</h3>
		<hr>
		<div class="table-responsive">
			<table class="table table-striped table-bordered text-left">
				<thead>
					<tr>
						<th>Id Customer</th>
						<th>No. Identitas</th>
						<th>Nama Tamu</th>
						<th>No. Telp</th>
						<th>Email</th>
						<th>Alamat</th>
						<th colspan="2">Action</th>

					</tr>

				</thead>
				<tbody>
					<c:forEach var="customer" items="${customerlist}">
						<tr>
							<td>${customer.idCustomer}</td>
							<td>${customer.noIdentitas}</td>
							<td>${customer.namaCustomer}</td>
							<td>${customer.noTelp}</td>
							<td>${customer.email}</td>
							<td>${customer.alamat}</td>
							<td><a href="/edit-customers?id_customer=${customer.idCustomer}">EDit</a></td>
						</tr>
					</c:forEach>

				</tbody>
			</table>
		</div>
	</div>
	<center>
									<div class="col-xs-12 col-sm-6 col-md-6 col-lg-12">

											<a href="add-customers" type="submit"
											class="btn btn-primary">Tambah Customer</a>


									</div>
								</center>
<script src="/static/js/jquery-1.11.1.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>

</body>
</html>
