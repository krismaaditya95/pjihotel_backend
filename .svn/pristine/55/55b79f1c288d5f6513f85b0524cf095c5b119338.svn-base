@Service
public class CustomerService {
	@Autowired
	CustomerRepository custRepo;
	
	public List<Customer> getAllCustomers(){
		List<Customer> customers = custRepo.findAll();
		return customers;
	}
	
	public Page<Customer> getAllCustomersPageable(Integer halaman, Integer jumlah_records){
		Pageable request = PageRequest.of(halaman, jumlah_records, Sort.by("idCustomer"));
		
		Page<Customer> customers = custRepo.findAll(request);
		return customers;
	}
	
	
	public Customer createCustomer(int no_identitas, String nama_customer, String no_telp, String email, String alamat) {
		Customer customer = new Customer(no_identitas, nama_customer, no_telp, email, alamat);
		Customer newCustomer = custRepo.save(customer);
		return newCustomer;
	}
	
