	// get halaman
	@RequestMapping(value = "/edit-customer/{id_customer}", method=RequestMethod.GET)
	public String showEditCustomerPage(ModelMap model, @PathVariable(value = "id_customer") Integer id_customer) throws ResourceNotFoundException {
//		model.put("customerlist", custRestCon.getAllCustomers());
		model.put("customeredit", custRestCon.getCustomerById(id_customer));
		return "edit-tamu";
	}
	
	// post edit
	@RequestMapping(value = "/edit-customer/{id_customer}", method=RequestMethod.POST)
	public String editCustomer(ModelMap model, @PathVariable(value = "id_customer") Integer id_customer, @RequestParam Integer no_identitas, String nama_customer, String no_telp, String email, String alamat) throws ResourceNotFoundException {
//		model.put("customerlist", custRestCon.getAllCustomers());
//		model.put("customeredit", custRestCon.getCustomerById(id_customer));
		custRestCon.editCustomer(id_customer, no_identitas, nama_customer, no_telp, email, alamat);
		return "redirect:/pjihotel/customers";
	}
	
	// hapus
	@RequestMapping(value = "/delete-customer/{id_customer}", method=RequestMethod.GET)
	public String deleteCustomer(ModelMap model, @PathVariable(value = "id_customer") Integer id_customer){
		custRestCon.deleteCustomerById(id_customer);
		return "redirect:/pjihotel/customers";
	}
	
	
	
}
