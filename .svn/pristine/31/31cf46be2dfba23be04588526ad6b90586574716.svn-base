package com.mini.project.hotel.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
@RequestMapping("/pjihotel")
public class CustomerMvcController {
//	@RequestMapping(method = RequestMethod.GET)
//	public String printHello(ModelMap model) {
//		return "login";
//	}
	@Autowired
	public CustomerRESTController custRestCon;
	
	@RequestMapping(value = "/customers", method=RequestMethod.GET)
	public String showCustomerPage(ModelMap model) {
		model.put("customerlist", custRestCon.getAllCustomers());
		return "customers";
	}
	
	@RequestMapping(value = "/add-customers", method=RequestMethod.GET)
	public String showAddCustomerPage(ModelMap model) {
//		model.put("customerlist", custRestCon.getAllCustomers());
		return "tambah-tamu";
	}
	
	@RequestMapping(value = "/add-customers", method=RequestMethod.POST)
	public String tambahTamu(ModelMap model, @RequestParam int no_identitas, String nama_customer, String no_telp, String email, String alamat) {
//		model.put("customerlist", custRestCon.getAllCustomers());
		custRestCon.createCustomers(no_identitas, nama_customer, no_telp, email, alamat);
		return "redirect:/pjihotel/customers";
	}
	
}
