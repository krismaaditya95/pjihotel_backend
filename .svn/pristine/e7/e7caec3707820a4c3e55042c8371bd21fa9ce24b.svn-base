package com.mini.project.hotel.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.mini.project.hotel.model.RoomType;
import com.mini.project.hotel.repository.RoomTypeRepository;

@RestController
@RequestMapping("/pjihotel/api")
public class RoomTypeRESTController {
	
	@Autowired
	private RoomTypeRepository rtr;
	
	@GetMapping("/room-type")
	public List<RoomType> lihatSemuaKamar(){
		return rtr.findAll();
	}
}
