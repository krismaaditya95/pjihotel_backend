	//return objek customer
	public Customer getCustomerByIds(int id_customer){
		Customer customer = custRepo.findOneByIdCustomer(id_customer);
		return customer;
	}
	
	//return arry berupa list customer
	public List<Customer> getCustomerById(Integer id_customer){
		List<Customer> customers = custRepo.findByIdCustomer(id_customer);
		return customers;
	}
	
